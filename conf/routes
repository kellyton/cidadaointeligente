# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

#Configurations. MUST be before others
GET     /financas/configure			controllers.FinancasController.configurar()
#GET     /educacao/configure			controllers.EducacaoController.configurar()

#Financas
GET		/financas/:id				controllers.FinancasController.show(id: String)

#Educacao
GET		/educacao					controllers.EducacaoController.index()
GET		/educacao/escolas			controllers.EducacaoController.escolas()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
